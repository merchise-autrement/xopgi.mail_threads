<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>
    <!-- Add the raw_email -->
    <record id="xopgi_mail_message_view" model="ir.ui.view">
      <field name="name">xopgi.mail_threads.mail.message.form</field>
      <field name="model">mail.message</field>
      <field name="inherit_id" ref="mail.view_message_form" />
      <field name="arch" type="xml">
        <!-- Remove the original body field by nothing to introduce the two
             tabs below. -->
        <field name="body" position="replace"/>
        <xpath expr="//sheet/group" position="after">
          <notebook colspan="4">
            <page string="Body">
              <field name="body" />
            </page>
            <page string="Raw email">
              <pre>
                <field name="raw_email" />
              </pre>
            </page>
          </notebook>
        </xpath>
      </field>
    </record>

  </data>
</openerp>
